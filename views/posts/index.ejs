<include "../partial/header">
<include "../partial/navigation">
<!-- value currentUser -->
<h1>HELLO THERE. THIS IS POSTS INDEX</h1>
<h3><%=currentUser%>you are logged in.</h3>
<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <div class="row">
        <div class="col-xs-4">
          <!-- upvotes+downvotes -->
        </div>
        <%posts.forEach(function(post){%>
        <div class="col-xs-8">
          <%=post.title%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%=post.image%>
        </div>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="row">
        <div class="col-xs-12">
          <%=post.location%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%=post.date%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%=post.description%>
        </div>
      </div>
        <div class="col-xs-6">
          <a href="/posts/<%=post.id%>/edit" class="btn btn-info ">EDIT</a>
        </div>
      <div class="row">
        <div class="col-xs-6">
          <form action="/posts/<%=post.id%>?_method=delete" method="POST">
            <label for="delete"></label>
            <button type="button" class="btn btn-default" id="delete">DELETE</button>
          </form>
      <%})%>
        </div>
      </div>
    </div>
  </div>
</div>
<include "../partial/footer">