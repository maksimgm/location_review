<%include ../partials/header%>
<%include ../partials/navigation%>
<!-- value currentUser -->
<h1 class="text-center">HELLO THERE. THIS IS POSTS INDEX</h1>
<h3 class="text-center">You are logged in as: <%=currentUser%></h3>
<div class="container">
  
        <!-- <div class="col-xs-4">
          upvotes+downvotes
        </div> -->
  <div class="col-xs-10 col-xs-offset-1">
    <%posts.forEach(function(post){%>
  <div class="col-xs-8 col-xs-offset-2">
    <a href="/posts/<%=post._id%>"><%=post.title%></a> 
  </div>  
  <div class="col-xs-8 col-xs-offset-2">
    <img src="<%=post.image%>" width="100px">
  </div>
  <div class="col-xs-8 col-xs-offset-2">
    <%=post.location%>
  </div>
  <div class="col-xs-8 col-xs-offset-2">
    <%=post.description%>
  </div>
  <div class="col-xs-8 col-xs-offset-2">
    <%=post.date%>
  </div>

  <%if(post.user === currentUser){%>
  <div class="col-xs-5">
    <a href="/posts/<%=post.id%>/edit" class="btn btn-info ">EDIT</a>
  </div>
  <div class="col-xs-5">
    <form action="/posts/<%=post.id%>?_method=delete" method="POST">
      <input type="submit" class="btn btn-default" id="delete"value="DELETE">
    </form>
  </div>
      <%}%>
  


    <%})%>

  </div>
</div>
<%include ../partials/footer%>