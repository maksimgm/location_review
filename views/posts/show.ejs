<%include ../partials/header%>
<%include ../partials/navigation%>
<div class="container">
  <div class="col-xs-8 col-xs-offset-2 contentWrapper postsWrapper text-center">
    <div>Title:<%=post.title%></div>
    <div> <img src="<%=post.image%>" alt="user's image"  width="195px" height="170px"></div>
    <div>Description:<%=post.description%></div>
    <div>Location:<%=post.location%></div>
    <div>Date:<%=moment(post.date).format("MM/DD/YYYY")%></div>
    <!-- <a href="/posts/<%=post._id%>/comments" class="btn btn-info">See Comments</a> -->
    <div>
    <%post.comments.forEach(function(comment){%>  
      <div class="col-xs-6 col-xs-offset-3 inlineComment">
        <%=comment.content%>
      </div>
    <%})%>
    </div>
    <div class="col-xs-6 col-xs-offset-3">
      <a href="/posts/<%=post._id%>/comments/new" class="btn btn-info">Add New Comment</a>
      <a href="/posts/<%=post._id%>/comments">See all comments</a>
      
      <div id="comments"></div>
    </div>
    <div></div>
  </div>
</div>

<%include ../partials/footer%>